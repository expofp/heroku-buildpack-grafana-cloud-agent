#!/bin/sh

echo "ARGS11------------"
echo $@
echo "ARGS11------------"

echo "ENV11------------"
env
echo "ENV11------------"

echo "PWD11------------"
pwd
echo "PWD11------------"

BUILD_DIR="$1"

echo "BUILD_DIR ls------------"
ls "$BUILD_DIR"
echo "BUILD_DIR ls------------"

[ -z "$BUILD_DIR" ] && BUILD_DIR=`pwd`

CONFIG_FILE_PATH=config/grafana-agent.yml

echo "Detecting Grafana agent config..."
if [ -f "$CONFIG_FILE_PATH" ]; then
  echo "Agent config detected."
  exit 0
else
  echo "Missing agent config."
  echo "$CONFIG_FILE_PATH"
  exit 1
fi
